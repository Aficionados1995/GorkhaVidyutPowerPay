<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:hint="Application Id"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/Application_Id"
        />
    <TextView
        android:textColor="#000000"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:hint="Application Name"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Application_Id"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/Application_Name"
        />
    <TextView
        android:layout_width="150dp"
        android:textColor="#000000"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:hint="Applicant Area"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Application_Name"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/Application_area"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Details"
        android:gravity="center"
        android:id="@+id/Applicat_view"
        android:layout_below="@+id/Application_Name"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/Application_Name"
        android:layout_alignParentEnd="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"

        android:layout_below="@+id/Application_area"
        android:layout_marginTop="4dp"
        ></View>


</RelativeLayout>